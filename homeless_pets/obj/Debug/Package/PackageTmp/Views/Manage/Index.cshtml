@model homeless_pets.Models.IndexViewModel
@{
    ViewBag.Title = "Управление";
}

<h2>Админ панель</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Пароль:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Смена пароля", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Создать", "SetPassword")
            }
            ]
        </dd>
        <dt>Управление:</dt>
        <dd>
            [
                @Html.ActionLink("Добавить админ аккаун", "Register", "Account")
            ]
        </dd>
        <dt>Редактировать:</dt>
        <dd>
            [
            @Html.ActionLink("Животные", "Info")
            ]
        </dd>
        <dd>
            [
            @Html.ActionLink("Новости", "NewsRedactor", "News")
            ]
        </dd>
    </dl>
</div>
